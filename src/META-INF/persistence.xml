<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="Fuzzy">
    	<provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.home.main.db.entities.FuzzySetDO</class>
        <class>com.home.main.db.entities.VariableDO</class>
        <class>com.home.main.db.entities.StatementDO</class>
        <class>com.home.main.db.entities.FuncDO</class>
        <class>com.home.main.db.entities.ModificatorDO</class>
        <class>com.home.main.db.entities.RuleDO</class>
        <class>com.home.main.db.entities.ExpressionDO</class>
        <properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
     	 	<property name="hibernate.show_sql" value="true"/>
      		<property name="hibernate.connection.username" value="root"/>
      		<property name="hibernate.connection.password" value="dbuser"/>
      		<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/fuzzy"/>
        </properties>
    </persistence-unit>
</persistence>
